<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpotifyPlaylist">


    <RadioGroup
        android:id="@+id/radioGroupGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonLoFi"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:text="Lo-Fi" />

        <RadioButton
            android:id="@+id/radioButtonClassical"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:text="Classical" />

        <RadioButton
            android:id="@+id/radioButtonPop"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:text="Pop" />
    </RadioGroup>

    <!-- Second RadioGroup -->
    <RadioGroup
        android:id="@+id/radioGroupMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupGenres">

        <RadioButton
            android:id="@+id/radioButtonCalm"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:text="Calm" />

        <RadioButton
            android:id="@+id/radioButtonDance"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:text="Dance" />

        <RadioButton
            android:id="@+id/radioButtonSad"
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:text="Sad" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="279dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="433dp"
        android:text="Choose the main genre of your playlist!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="581dp"
        android:text="Choose the main mood of your playlist!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="304dp"
        android:layout_height="37dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="639dp"
        android:text="Great! No matter if you are happy or just finished crying at 4:00! You look amazing! Now answer some questions!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="349dp"
        android:layout_height="101dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="34dp"
        android:text="Now it is time to create your playlist! By clicking Create Playlist button, we are going to use data from your picture (Pomodogo is not and is never going to store your pictures in any way) and your Spotify listening history, according to Spotify Privacy Rules. By creating the playlist you are conseting to using your mentioned data."
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupMood" />

    <Button
        android:id="@+id/button"
        android:layout_width="248dp"
        android:layout_height="109dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="72dp"
        android:text="Create Playlist!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>
